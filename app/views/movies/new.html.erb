<% provide(:title, 'Add movie') %>
<h1>Add Movie</h1>

<div class="row" style="align:center">
  <div class="span6 offset3">
    <%= form_for(@movie) do |f| %>
      
      <%= f.label :title %>
      <%= f.text_field :title %>

      <%= f.label :director %>
      <%= f.text_field :director %>

      <%= f.label :rating %>
      <%= f.text_field :rating %>

      <%= f.submit "Create new movie", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>

