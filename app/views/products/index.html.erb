<%= stylesheet_link_tag 'scaffold', 'store' %>

<h1>Products</h1>
<div id="product-list" width="700px">
<table>
  <thead>
    <tr>
      <th align="left" style="padding:10px">Name</th>
      <th align="left" style="padding:10px">Price</th>
      <th align="left" style="padding:10px">Quantity</th>
      <th align="left" style="padding:10px">Image</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr class="<%= cycle('list-line-odd', 'list-line-even') %>">
        <td><span class="list-title"><%= product.name %></span></td>
        <td><span class="list-title"><%= product.price %></span></td>
        <td><span class="list-title"><%= product.numberavailable %></span></td>
        <td width="100px"><span class="list-title"><%= image_tag(product.imageurl, alt: "image")%></span></td>
        <td>
          <%= link_to 'Show', product %><br>
          <%= link_to 'Edit', edit_product_path(product) %><br>
          <%= link_to 'Destroy', product, :confirm => 'Are you sure?', :method => :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

<%= link_to 'New Product', new_product_path %>