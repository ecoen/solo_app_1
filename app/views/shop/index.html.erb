<h1>Your Catalog</h1>

<div id="product-list">
<table>  
<% for product in @products %>
  <tr class="<%= cycle('list-line-odd', 'list-line-even') %>">
	<td width="50px"><span class="list-title"><%= image_tag(product.imageurl, alt: "image")%></span></td>
	<td>
		<span class="list-title"><%= h(product.name) %></span><br />
		<%= h(product.description) %>
	</td>
	<td><%= number_to_currency(product.price) %></td>
	
	<td><%= link_to 'Add to Cart', :action => :add_to_cart, :id => product %></td>
   </tr>

<% end %>
</table>
</div>
